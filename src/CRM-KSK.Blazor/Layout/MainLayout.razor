@using System.Security.Claims
@inherits LayoutComponentBase
@inject HttpClient _http
@inject IJSRuntime JSRuntime
@inject NavigationManager _navigation
@inject AuthenticationStateProvider AuthStateProvider

<div class="page">
    @if(!_navigation.Uri.Contains("login", StringComparison.OrdinalIgnoreCase))
    {
        <NavMenu OnOpenAddClientModal="@ShowAddClientModal" />
    }
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>

    <AddClientModal IsVisible="@IsAddClientModalVisible"
                    IsVisibleChanged="@OnAddClientModalVisibilityChanged"
                    OnClientAdded="@OnClientAdded" />
</div>

<style>
    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        width: 100%;
    }

    main {
        flex: 1;
        width: 100%;
    }

    .content {
        width: 100%;
        max-width: none;
    }

    .unauthorized-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 80vh;
        text-align: center;
        font-size: 1.2rem;
        color: #333;
    }

    .login-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        margin-left: 5px;
    }

    .login-link:hover {
        text-decoration: underline;
    }
</style>

@code {
    private bool IsAddClientModalVisible = false;

    private Task ShowAddClientModal()
    {
        IsAddClientModalVisible = true;
        return Task.CompletedTask;
    }

    private Task OnAddClientModalVisibilityChanged(bool visible)
    {
        IsAddClientModalVisible = visible;
        return Task.CompletedTask;
    }

    private Task OnClientAdded()
    {
        return Task.CompletedTask;
    }
}
