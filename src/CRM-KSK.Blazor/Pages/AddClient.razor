@page "/add-client"
@inject HttpClient Client
@inject NavigationManager Navigation

<h3>Добавить Клиента</h3>

<EditForm Model="@client" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Имя:</label>
        <InputText @bind-Value="client.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Фамилия:</label>
        <InputText @bind-Value="client.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Телефон:</label>
        <InputText @bind-Value="client.Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Дата рождения:</label>
        <InputDate @bind-Value="client.DateOfBirth" class="form-control" />
    </div>
    <h4>Данные о родителях</h4>
    <div class="form-group">
        <label>Родитель:</label>
        <InputText @bind-Value="client.ParentName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Телефон для связи:</label>
        <InputText @bind-Value="client.ParentPhone" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</EditForm>

@code {
    private ClientDto client = new ClientDto();

    private async Task HandleValidSubmit()
    {
        var response = await Client.PostAsJsonAsync("api/clients", client);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/clients");
        }
    }
}
