@page "/add-client"
@inject ClientService ClientService

<h3>Добавить Клиента</h3>

<EditForm Model="@client" OnValidSubmit="@AddClientAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Имя:</label>
        <InputText @bind-Value="client.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Фамилия:</label>
        <InputText @bind-Value="client.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Телефон:</label>
        <InputText @bind-Value="client.Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Дата рождения:</label>
        <InputDate @bind-Value="client.DateOfBirth" class="form-control" />
    </div>
    <div class="form-group">
        <label>Уровень тренировок:</label>
        <InputRadio @bind-Value="client.LevelOfTraining" class="form-control" />
    </div>
    <div class="form-group">
        <label>Тренер:</label>
        <InputText @bind-Value="client.TrainerName" class="form-control" />
    </div>
    <h4>Данные о родителях</h4>
    <div class="form-group">
        <label>Родитель:</label>
        <InputText @bind-Value="client.ParentName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Телефон для связи:</label>
        <InputText @bind-Value="client.ParentPhone" class="form-control" />
    </div>
    <button @onclick="AddClientAsync">Добавить</button>
</EditForm>

@code {
    private ClientDto client = new ClientDto();

    private async Task AddClientAsync()
    {
        if (await ClientService.AddClientAsync(client))
        {
            client = new();
        }
    }
}
