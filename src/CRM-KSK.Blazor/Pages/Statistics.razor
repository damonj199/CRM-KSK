@page "/statistics"
@using CRM_KSK.Application.Dtos
@using CRM_KSK.Core.Enums
@using CRM_KSK.Blazor.Services
@using Radzen.Blazor
@using System.Text.Json
@inject ClientServiceBlazor ClientService
@inject MembershipServiceBlazor MembershipService
@inject TrainerServiceBlazor TrainerService

<PageTitle>Статистика</PageTitle>

<div class="container-fluid">
    <!-- Заголовок страницы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <h2 class="page-title">
                    <i class="bi bi-graph-up me-2"></i>
                    Статистика
                </h2>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-2">Загрузка статистики...</p>
        </div>
    }
    else
    {
        <!-- Основная статистика -->
        <div class="row g-3 mb-4">
            <!-- Клиенты -->
            <div class="col-md-6 col-lg-3">
                <div class="stats-card clients-card">
                    <div class="stats-header">
                        <div class="stats-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h5 class="stats-title">Клиенты</h5>
                    </div>
                    <div class="stats-content">
                        <div class="stat-item">
                            <span class="stat-label">Всего</span>
                            <span class="stat-number">@statistics?.TotalClients</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">С активными абонементами</span>
                            <span class="stat-number active">@statistics?.ClientsWithActiveMemberships</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Были за 2 месяца</span>
                            <span class="stat-number recent">@statistics?.ClientsWithRecentActivity</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Неактивных</span>
                            <span class="stat-number inactive">@statistics?.InactiveClients</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Абонементы -->
            <div class="col-md-6 col-lg-3">
                <div class="stats-card memberships-card">
                    <div class="stats-header">
                        <div class="stats-icon">
                            <i class="bi bi-credit-card"></i>
                        </div>
                        <h5 class="stats-title">Абонементы</h5>
                    </div>
                    <div class="stats-content">
                        <div class="stat-item">
                            <span class="stat-label">Активных</span>
                            <span class="stat-number">@statistics?.ActiveMemberships</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Разовых</span>
                            <span class="stat-number one-time">@statistics?.OneTimeMemberships</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Утренних</span>
                            <span class="stat-number morning">@statistics?.MorningMemberships</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Тренеры -->
            <div class="col-md-6 col-lg-3">
                <div class="stats-card trainers-card">
                    <div class="stats-header">
                        <div class="stats-icon">
                            <i class="bi bi-person-badge"></i>
                        </div>
                        <h5 class="stats-title">Тренеры</h5>
                    </div>
                    <div class="stats-content">
                        <div class="stat-item">
                            <span class="stat-label">Всего тренеров</span>
                            <span class="stat-number">@statistics?.TotalTrainers</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Средняя загруженность</span>
                            <span class="stat-number">@statistics?.AverageTrainerWorkload.ToString("F1")</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Самый загруженный</span>
                            <span class="stat-number busy">@statistics?.MostBusyTrainer</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Менее загруженный</span>
                            <span class="stat-number less-busy">@statistics?.LeastBusyTrainer</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Тренировки -->
            <div class="col-md-6 col-lg-3">
                <div class="stats-card trainings-card">
                    <div class="stats-header">
                        <div class="stats-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <h5 class="stats-title">Тренировки</h5>
                    </div>
                    <div class="stats-content">
                        <div class="stat-item">
                            <span class="stat-label">Вчера</span>
                            <span class="stat-number">@statistics?.YesterdayTrainings</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">На этой неделе</span>
                            <span class="stat-number">@statistics?.WeekTrainings</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">В этом месяце</span>
                            <span class="stat-number">@statistics?.MonthTrainings</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- График статистики по типам тренировок -->
