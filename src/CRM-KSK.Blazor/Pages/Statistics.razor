                    <RadzenChart>
                        <RadzenColumnSeries Data="@trainingTypeData" 
                                           CategoryProperty="name" 
                                           ValueProperty="count" 
                                           Title="Количество абонементов" />
                        <RadzenCategoryAxis Padding="20" />
                        <RadzenValueAxis>
                            <RadzenGridLines Visible="true" />
                            <RadzenAxisTitle Text="Количество" />
                        </RadzenValueAxis>
                        <RadzenLegend />
                    </RadzenChart>
                </RadzenCard>
            </div>
        </div>

        <!-- Статистика по тренерам -->
        <div class="row mt-4">
            <div class="col-12">
                <h4 class="section-title">
                    <i class="bi bi-people"></i>
                    Статистика по тренерам за текущий месяц
                </h4>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <RadzenCard>
                    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H3" Style="margin-bottom: 1rem;">
                        <i class="bi bi-table me-2"></i>
                        Загруженность тренеров и предпочитаемые типы тренировок
                    </RadzenText>
                    <RadzenDataGrid Data="@statistics?.TrainerStats" 
                                   TItem="TrainerStatDto" 
                                   AllowPaging="true" 
                                   PageSize="10"
                                   AllowSorting="true"
                                   AllowFiltering="true"
                                   FilterMode="FilterMode.Advanced"
                                   ShowPagingSummary="true"
                                   PagerHorizontalAlign="HorizontalAlign.Center">
                        <Columns>
                            <RadzenDataGridColumn TItem="TrainerStatDto" 
                                                Property="TrainerName" 
                                                Title="Тренер" 
                                                Width="200px"
                                                Sortable="true" />
                            <RadzenDataGridColumn TItem="TrainerStatDto" 
                                                Property="MonthTrainings" 
                                                Title="Тренировок за месяц" 
                                                Width="150px"
                                                Sortable="true"
                                                TextAlign="TextAlign.Center">
                                <Template Context="trainer">
                                    <RadzenBadge Text="@trainer.MonthTrainings.ToString()" 
                                                BadgeStyle="@GetTrainerWorkloadBadgeStyle(trainer.MonthTrainings)"
                                                Icon="@GetTrainerWorkloadIcon(trainer.MonthTrainings)" />
                                </Template>
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="TrainerStatDto" 
                                                Property="MostFrequentTrainingType" 
                                                Title="Чаще всего ведет" 
                                                Width="200px"
                                                Sortable="true" />
                            <RadzenDataGridColumn TItem="TrainerStatDto" 
                                                Property="MostFrequentTypeCount" 
                                                Title="Количество" 
                                                Width="120px"
                                                Sortable="true"
                                                TextAlign="TextAlign.Center">
                                <Template Context="trainer">
                                    <span class="training-count-badge">@trainer.MostFrequentTypeCount</span>
                                </Template>
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="TrainerStatDto" 
                                                Title="Загруженность" 
                                                Width="150px"
                                                Sortable="false">
                                <Template Context="trainer">
                                    <div class="workload-indicator">
                                        <div class="workload-bar">
                                            <div class="workload-fill" 
                                                 style="@($"width: {GetWorkloadPercentage(trainer.MonthTrainings)}%; background-color: {GetWorkloadColor(trainer.MonthTrainings)};")"></div>
                                        </div>
                                        <small class="workload-text">@GetWorkloadPercentage(trainer.MonthTrainings)%</small>
                                    </div>
                                </Template>
                            </RadzenDataGridColumn>
                        </Columns>
                    </RadzenDataGrid>
                </RadzenCard>
            </div>
        </div>

    }
</div>

@code {
    private bool isLoading = true;
    private StatisticsDto? statistics;

    // Данные для графика типов тренировок
    private List<TrainingTypeChartData> trainingTypeData = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadStatistics();
    }

    private async Task LoadStatistics()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Получаем готовую статистику с бэкенда
            statistics = await ClientService.GetStatistics();
            
            // Подготавливаем данные для графиков
            PrepareChartData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки статистики: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void PrepareChartData()
    {
        if (statistics == null) return;

        // Данные для типов тренировок
        trainingTypeData = statistics.TrainingTypeStats?.Select(x => new TrainingTypeChartData
        {
            name = x.Name,
            count = x.Count
        }).ToList() ?? new List<TrainingTypeChartData>();
    }

    // Модель данных для графика типов тренировок
    public class TrainingTypeChartData
    {
        public string name { get; set; } = "";
        public int count { get; set; }
    }

    // Методы для стилизации таблицы тренеров
    private BadgeStyle GetTrainerWorkloadBadgeStyle(int trainingCount)
    {
        return trainingCount switch
        {
            >= 50 => BadgeStyle.Success,    // Высокая загруженность - зеленый
            >= 25 => BadgeStyle.Warning,    // Средняя загруженность - желтый
            >= 10 => BadgeStyle.Info,       // Низкая загруженность - синий
            _ => BadgeStyle.Secondary       // Очень низкая - серый
        };
    }

    private string GetTrainerWorkloadIcon(int trainingCount)
    {
        return trainingCount switch
        {
            >= 50 => "trending_up",    // Высокая загруженность
            >= 25 => "trending_flat",  // Средняя загруженность
            >= 10 => "trending_down",  // Низкая загруженность
            _ => "remove"              // Очень низкая
        };
    }

    private int GetWorkloadPercentage(int trainingCount)
    {
        if (statistics?.TrainerStats == null || !statistics.TrainerStats.Any())
            return 0;

        var maxTrainings = statistics.TrainerStats.Max(t => t.MonthTrainings);
        if (maxTrainings == 0) return 0;

        return Math.Min(100, (int)((double)trainingCount / maxTrainings * 100));
    }

    private string GetWorkloadColor(int trainingCount)
    {
        return trainingCount switch
        {
            >= 50 => "#28a745",    // Зеленый
            >= 25 => "#ffc107",    // Желтый
            >= 10 => "#17a2b8",    // Синий
            _ => "#6c757d"         // Серый
        };
    }
}

